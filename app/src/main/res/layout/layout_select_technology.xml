<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/background_dark">

    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/tv_select_technology"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="16dp"
        android:layout_marginTop="16dp"
        android:text="Select Technology"
        android:textColor="@color/white"
        android:textSize="14sp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <View
        android:id="@+id/seperatot1"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_marginTop="18dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tv_select_technology" />

    <TextView
        android:id="@+id/tv5g"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="26dp"
        android:layout_marginTop="22dp"
        android:text="5G"
        android:textColor="@color/white"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/seperatot1" />

    <com.google.android.material.checkbox.MaterialCheckBox
        android:id="@+id/checkbox5g"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginRight="16dp"
        app:layout_constraintBottom_toBottomOf="@+id/tv5g"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="@+id/tv5g"

        />

    <View
        android:id="@+id/seperatot2"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_marginTop="22dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/checkbox5g" />

    <TextView
        android:id="@+id/tvLte"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="22dp"
        android:text="Lte"
        android:textColor="@color/white"
        app:layout_constraintLeft_toLeftOf="@+id/tv5g"
        app:layout_constraintTop_toBottomOf="@+id/seperatot2" />

    <com.google.android.material.checkbox.MaterialCheckBox
        android:id="@+id/checkboxlte"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginRight="16dp"
        app:layout_constraintBottom_toBottomOf="@+id/tvLte"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="@+id/tvLte"

        />

    <View
        android:id="@+id/seperatot3"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_marginTop="22dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/checkboxlte" />

    <TextView
        android:id="@+id/tv3g"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="22dp"
        android:text="3G"
        android:textColor="@color/white"
        app:layout_constraintLeft_toLeftOf="@+id/tvLte"
        app:layout_constraintTop_toBottomOf="@+id/seperatot3" />

    <com.google.android.material.checkbox.MaterialCheckBox
        android:id="@+id/checkbox3g"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginRight="16dp"
        app:layout_constraintBottom_toBottomOf="@+id/tv3g"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="@+id/tv3g"

        />

    <View
        android:id="@+id/seperatot4"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_marginTop="22dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/checkbox3g" />

    <TextView
        android:id="@+id/tv2g"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="22dp"
        android:text="2g"
        android:textColor="@color/white"
        app:layout_constraintLeft_toLeftOf="@+id/tv3g"
        app:layout_constraintTop_toBottomOf="@+id/seperatot4" />

    <CheckBox
        android:id="@+id/checkbox2g"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginRight="16dp"
        app:layout_constraintBottom_toBottomOf="@+id/tv2g"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="@+id/tv2g"
        />

    <View
        android:id="@+id/seperatot5"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_marginTop="22dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/checkboxlte" />

    <ImageButton
        android:id="@+id/cancleButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="50dp"
        android:background="@color/background_dark"
        android:src="@drawable/ic_cancle_botton"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginBottom="30dp"
        />

    <ImageButton
        android:id="@+id/okbutton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@color/background_dark"
        android:src="@drawable/ic_ok_button"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="@id/cancleButton"
        android:layout_marginRight="50dp"

        />


</androidx.constraintlayout.widget.ConstraintLayout>
